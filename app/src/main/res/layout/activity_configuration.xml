<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Menge eingeben"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="92dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Menge"
        app:layout_constraintBottom_toBottomOf="@+id/edit_quantity"
        app:layout_constraintStart_toStartOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notiz"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="161dp" />

    <EditText
        android:id="@+id/edit_notice"
        android:layout_width="143dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="Notiz eingeben"
        android:inputType="textPersonName"
        android:maxLength="12"
        app:layout_constraintEnd_toEndOf="@+id/edit_quantity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_quantity"
        tools:layout_editor_absoluteY="147dp" />

    <Button
        android:id="@+id/con_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BestÃ¤tigen"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="454dp" />

    <TextView
        android:id="@+id/con_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="36dp" />
</androidx.constraintlayout.widget.ConstraintLayout>